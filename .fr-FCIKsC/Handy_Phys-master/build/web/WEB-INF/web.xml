<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>generarHTML</servlet-name>
        <servlet-class>servlets.generarHTML</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>articulo</servlet-name>
        <servlet-class>servlets.articulo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>regist</servlet-name>
        <servlet-class>servlets.regist</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addComment</servlet-name>
        <servlet-class>servlets.addComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizarHTML</servlet-name>
        <servlet-class>servlets.actualizarHTML</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrarHTML</servlet-name>
        <servlet-class>servlets.borrarHTML</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>generarHTML</servlet-name>
        <url-pattern>/servlets/generarHTML</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>articulo</servlet-name>
        <url-pattern>/servlets/articulo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/servlets/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>regist</servlet-name>
        <url-pattern>/servlets/regist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addComment</servlet-name>
        <url-pattern>/servlets/addComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizarHTML</servlet-name>
        <url-pattern>/servlets/actualizarHTML</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>borrarHTML</servlet-name>
        <url-pattern>/servlets/borrarHTML</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
